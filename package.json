{
  "name": "zi",
  "version": "0.1.0",
  "description": "A minimal, fully-trackable coding agent",
  "type": "module",
  "bin": {
    "zi": "./src/cli.ts"
  },
  "main": "./src/index.ts",
  "scripts": {
    "dev": "bun run src/cli.ts",
    "build": "bun build ./src/cli.ts --outdir ./dist --target bun",
    "test": "bun test",
    "typecheck": "tsc --noEmit",
    "lint": "biome check .",
    "format": "biome format --write .",
    "check": "biome check --write . && tsc --noEmit"
  },
  "dependencies": {
    "ai": "^4.0.0",
    "@anthropic-ai/sdk": "^0.30.0",
    "@ai-sdk/openai": "^1.0.0",
    "just-bash": "^0.4.0",
    "agentfs-sdk": "^0.6.0",
    "@mariozechner/pi-tui": "^0.30.0",
    "chalk": "^5.3.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.0",
    "@types/bun": "latest",
    "typescript": "^5.9.0"
  },
  "keywords": [
    "ai",
    "agent",
    "coding",
    "llm",
    "cli"
  ],
  "author": "",
  "license": "MIT"
}
